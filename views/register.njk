{% extends "layout.njk" %}
{% block  content %}
<main class="container mt-3">
    <h1>{{ title }}</h1>
    <form action="/register" method="POST">
    <p>Username</p>
    <input type="text" name="username">
    <p>Password</p>
    <input type="password" name="password">
    <p>Repeat Password</p>
    <input type="password" name="passwordConfirmation">
    <button type="submit">Register</button>
    </form>
</main>
{% endblock %}